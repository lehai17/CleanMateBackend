@model CleanMate.Api.Domain.Entities.CleanerProfile
@{
    ViewData["Title"] = "Cleaner Dashboard";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body">
                    <h3 class="text-center mb-4">🧹 Cleaner Dashboard</h3>

                    <dl class="row">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.User.FullName</dd>

                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@Model.City</dd>

                        <dt class="col-sm-4">Hourly Rate</dt>
                        <dd class="col-sm-8">@Model.HourlyRate.ToString("N0") VND/hour</dd>

                        <dt class="col-sm-4">Average Rating</dt>
                        <dd class="col-sm-8">@Model.AvgRating.ToString("0.0") ⭐</dd>

                        <dt class="col-sm-4">Bio</dt>
                        <dd class="col-sm-8">@Model.Bio</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.AddressText</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("List", "Booking")" class="btn btn-success me-2"> View Bookings</a>
                        <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-danger"> Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
