@* CleanMate Cleaner Portal Layout *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CleanMate Cleaner Portal</title>

    <!-- Bootstrap + Site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CleanMate.CleanerWeb.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- ======== Navbar ======== -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-primary navbar-toggleable-sm border-bottom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    🧹 CleanMate Portal
                </a>

                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Dashboard" asp-action="Index"> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Booking" asp-action="List"> Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cleaner" asp-action="Profile">My Profile</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Auth" asp-action="Logout"> Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ======== Main content ======== -->
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- ======== Footer ======== -->
    <footer class="footer bg-white border-top text-center text-muted py-3 mt-auto">
        <div class="container">
            &copy; 2025 - CleanMate Cleaner Portal
        </div>
    </footer>

    <!-- ======== Scripts ======== -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
