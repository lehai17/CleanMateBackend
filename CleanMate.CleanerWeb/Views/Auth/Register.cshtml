@model CleanMate.CleanerWeb.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register Cleaner";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register Cleaner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center" style="height:100vh">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body">
                        <h4 class="text-center mb-4">🧹 Register as Cleaner</h4>
                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label>Full Name</label>
                                <input asp-for="FullName" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                            </div>
                            <div class="mb-3">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" type="password" required />
                            </div>
                            <div class="mb-3">
                                <label>Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                            </div>

                            @if (Model?.ErrorMessage != null)
                            {
                                <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
                            }
                            @if (Model?.SuccessMessage != null)
                            {
                                <div class="alert alert-success text-center">@Model.SuccessMessage</div>
                            }

                            <button class="btn btn-success w-100" type="submit">Register</button>
                        </form>

                        <div class="text-center mt-3">
                            <a asp-action="Login" class="text-decoration-none">Already have an account? Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
