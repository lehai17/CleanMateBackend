@model CleanMate.CleanerWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "Cleaner Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Cleaner Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center" style="height:100vh">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body">
                        <h4 class="text-center mb-4">🧹 CleanMate Cleaner Login</h4>
                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" type="email" required />
                            </div>
                            <div class="mb-3">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" type="password" required />
                            </div>
                            @if (Model?.ErrorMessage != null)
                            {
                                <div class="alert alert-danger py-2 text-center">@Model.ErrorMessage</div>
                            }
                            <button class="btn btn-primary w-100" type="submit">Login</button>
                        </form>

                        <div class="text-center mt-3">
                            <a asp-action="Register" class="text-decoration-none text-primary fw-semibold">
                                Don't have an account? Register now
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
